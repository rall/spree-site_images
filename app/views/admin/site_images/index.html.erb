<table class="index">
  <tr>
    <th><%= t("thumbnail") %></th>
    <th><%= t("page_position") %></th>
    <th><%= t("alt_text") %></th>
    <th><%= t("action") %></th>
  </tr>

  <% @site_images.each do |image| %>
    <tr id="<%= dom_id(image) %>">
      <td><%= link_to(image_tag(image.attachment.url(:mini)), t("image_link")) %></td>
      <td><%= t(image.page_position) %></td>
      <td><%= image.alt %></td>
      <td class="actions">
        <%= link_to_with_icon('edit', t("edit"), edit_admin_site_image_url(image)) %>
        &nbsp;
        <%= link_to_delete image, {:url => admin_site_image_url(image) }%>
      </td>
    </tr>
  <% end %>
</table>

<div id="images"></div>
<br/>
<p>
    <%= link_to icon('add') + ' ' + t("new_image"), new_admin_site_image_url(@product), :id => "new_image_link" %>
</p>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){

      jQuery('#new_image_link').click(function (event) {
        event.preventDefault();
        jQuery(this).hide();
        jQuery.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){ jQuery('#images').html(r);} });
      });

    });
  </script>
<% end %>
